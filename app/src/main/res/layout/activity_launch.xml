<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".launch">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="plan"
        android:id="@+id/plan"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <SearchView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchView"
        android:layout_marginTop="78dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Date Start"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/textView3"
        android:layout_toLeftOf="@+id/plan"
        android:layout_toStartOf="@+id/plan"
        android:layout_marginRight="26dp"
        android:layout_marginEnd="26dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Date End"
        android:id="@+id/textView3"
        android:layout_toRightOf="@+id/plan"
        android:layout_toEndOf="@+id/plan"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/date_start"
        android:layout_below="@+id/textView2"
        android:layout_toLeftOf="@+id/plan"
        android:layout_toStartOf="@+id/plan" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/date_end"
        android:layout_alignTop="@+id/date_start"
        android:layout_toRightOf="@+id/plan"
        android:layout_toEndOf="@+id/plan" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        android:layout_below="@+id/searchView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:layout_above="@+id/plan">

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/attractions_list" />
    </ScrollView>

</RelativeLayout>
